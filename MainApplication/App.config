<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net" />
	</configSections>
	<appSettings>
		<add key="Platform" value="iOS" />
		<add key="SendMessage" value="false" />
		<add key="MaxBatch" value="20" />
		<add key="Increment" value="1000" />
		<add key="CommandTimeout" value="600" />
	</appSettings>
	<connectionStrings>
		<remove name="LocalMySqlServer" />
		<add name="LocalMySqlServer" connectionString="Data Source=127.0.0.1;port=3306;userid=root;password=password;database=mydatabase;Pooling=true;Min Pool Size=10;Max Pool Size=200;Allow User Variables=True" providerName="MySql.Data.MySqlClient" />
	</connectionStrings>
	<log4net>
		<root>
			<level value="INFO" />
			<appender-ref ref="LogFileAppender" />
		</root>
		<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
			<param name="File" value="C:\Logs\PushNotifications.log" />
			<param name="AppendToFile" value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%-10p%d{yyyy-MM-dd HH:mm:ss,fff} – %m%n" />
			</layout>
		</appender>
	</log4net>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
	</startup>
	<system.data>
		<DbProviderFactories>
			<remove invariant="MySql.Data.MySqlClient" />
			<add name="MySQL Data Provider" invariant="MySql.Data.MySqlClient" description=".Net Framework Data Provider for MySQL" type="MySql.Data.MySqlClient.MySqlClientFactory, MySql.Data, Version=6.9.9.0, Culture=neutral, PublicKeyToken=c5687fc88969c44d" />
		</DbProviderFactories>
	</system.data>
</configuration>